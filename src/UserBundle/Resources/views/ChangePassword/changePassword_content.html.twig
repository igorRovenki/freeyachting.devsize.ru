{% trans_default_domain 'AppBundle' %}

<div class="container content traveller-registration">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <h1>{{ 'profile.change_password'|trans }}</h1>
                </div>
            </div>
            <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
                <div class="row profile-bottom">
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            {{ form_label(form.current_password) }}
                            {{ form_errors(form.current_password) }}
                            {{ form_widget(form.current_password, { attr: {class: 'form-control'} }) }}
                            <div class="text-right">
                                <a href="#" data-toggle="modal" data-target="#modal-password" data-dismiss="modal">
                                    {{ 'modal.profile.forgot_password'|trans({}, 'AppBundle') }}
                                </a>
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.plainPassword.first) }}
                            {{ form_errors(form.plainPassword.first) }}
                            {{ form_widget(form.plainPassword.first, { attr: {class: 'form-control'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.plainPassword.second) }}
                            {{ form_errors(form.plainPassword.second) }}
                            {{ form_widget(form.plainPassword.second, { attr: {class: 'form-control'} }) }}
                        </div>
                    </div>
                </div>
                <div class="row bottom-form">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
                        <p>{{ 'form.required_fileds'|trans|raw }}</p>
                        <button type="submit" class="btn btn-1">{{ 'form.change_password'|trans }}</button>
                    </div>
                </div>
                {{ form_widget(form) }}
            </form>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 banner-xs">
            {% include 'AppBundle:blocks:banners.html.twig' %}
        </div>
    </div>
</div>
