{% extends 'AppBundle:Media:bootstrap_file_input.html.twig' %}

{% block defaultPreviewContent %}
    {% if form.vars.value.photo %}
        defaultPreviewContent: '<img src="{% path form.vars.value.photo, 'middle' %}" alt="Your Avatar">',
    {% else %}
        defaultPreviewContent: '<img src="{{ asset('images/avatar.png') }}" alt="Your Avatar">',
    {% endif %}
{% endblock %}
